@page "/NewUser"
@using Blazor.code.persistence
@using Blazor.Models
@inject NavigationManager NavigationManager


<h1>Adding</h1>


<div class="form-group">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label class="control-label">Name </label>
                <br/>
                <input placeholder="Name" @bind="newCustomer.Name"/>
            </div>
            <div class="form-group">
                                                 
                <label class="control-label">CPR-Number </label>
                <br/>
                <input placeholder="age" @bind="newCustomer.CPRNumber"/>
            </div>
            <div class="form-group">
                <label class="control-label">Address </label>
                <br/>
                <input placeholder="Firstname" @bind="newCustomer.Address"/>
            </div>
             <div class="form-group">
                         
                 <label class="control-label">Phone Number </label>
                 <br/>
                 <input placeholder="Lastname" @bind="newCustomer.PhoneNumber"/>
                 </div>
            <div class="form-group">
                <label class="control-label">Email Address </label>
                <br/>
                <input placeholder="HairColor" @bind="newCustomer.EmailAddress"/>
            </div>
            <div class="form-group">
                <label class="control-label">Nationality </label>
                <br/>
                <input placeholder="EyeColor" @bind="newCustomer.Nationality"/>
            </div> 
            <div class="form-group">
                <label class="control-label">Country of Residence </label>
                <br/>
                <input placeholder="EyeColor" @bind="newCustomer.CountryOfResidence"/>
            </div>
            <div class="form-group">
                <label class="control-label">Username </label>
                <br/>
                <input placeholder="EyeColor" @bind="newCustomer.Username"/>
            </div> 
            <div class="form-group">
                <label class="control-label">Password </label>
                <br/>
                <input placeholder="EyeColor" @bind="newCustomer.Password"/>
            </div>

            <a class="btn btn-outline-light btn-lg" href="#AddButton"@onclick="RegisterUser">Register</a>

        </form>
    </div>
</div>

